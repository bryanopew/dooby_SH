{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["es6"],
      "strict": true,
      "target": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "~/*": ["*"]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }